# Environment Variables Configuration
# Copy this file to .env and update with your actual values
# WARNING: Never commit .env file to version control!

# ========================================
# MySQL Configuration
# ========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=MigratingAssistant
MYSQL_USER=appuser
MYSQL_PASSWORD=your_secure_app_password_here
MYSQL_PORT=3306

# ========================================
# Application Configuration
# ========================================
API_PORT=5000
ASPNETCORE_ENVIRONMENT=Development

# ========================================
# JWT Configuration
# ========================================
# IMPORTANT: JWT_SECRET must be at least 32 characters long
JWT_SECRET=YourSuperSecretKeyThatIsAtLeast32CharactersLongForProduction
JWT_ISSUER=MigratingAssistant
JWT_AUDIENCE=MigratingAssistantUsers
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=7

# ========================================
# phpMyAdmin Configuration (Development Only)
# ========================================
PHPMYADMIN_PORT=8080

# ========================================
# Production-Specific Settings
# ========================================
# Uncomment and configure for production deployment
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
